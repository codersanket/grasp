{
  "name": "grasp-mcp",
  "version": "0.1.6",
  "description": "Know your code. Own your code. MCP server that ensures developers understand AI-generated code.",
  "type": "module",
  "main": "dist/src/index.js",
  "bin": {
    "grasp-mcp": "./dist/src/index.js",
    "grasp": "./dist/bin/grasp.js",
    "grasp-hook": "./dist/bin/grasp-hook.js"
  },
  "scripts": {
    "build": "tsc && chmod +x dist/src/index.js dist/bin/grasp.js dist/bin/grasp-hook.js",
    "dev": "tsx src/index.ts",
    "test": "vitest",
    "test:run": "vitest run",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "mcp",
    "ai",
    "code-comprehension",
    "developer-tools",
    "code-quality"
  ],
  "author": "Sanket Babar",
  "license": "AGPL-3.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/sanketbabar/grasp"
  },
  "homepage": "https://github.com/sanketbabar/grasp#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist",
    "templates",
    "README.md",
    "LICENSE"
  ],
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.26.0",
    "better-sqlite3": "^11.0.0",
    "commander": "^14.0.3",
    "zod": "^3.25.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.12",
    "@types/node": "^22.0.0",
    "tsx": "^4.19.0",
    "typescript": "^5.7.0",
    "vitest": "^3.0.0"
  }
}
